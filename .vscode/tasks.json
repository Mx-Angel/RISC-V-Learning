{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Addition (rv32, -g)",
      "type": "shell",
      "command": "make",
      "options": { "cwd": "${workspaceFolder}/Addition" },
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Clean Addition",
      "type": "shell",
      "command": "make clean",
      "options": { "cwd": "${workspaceFolder}/Addition" },
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Rebuild Addition (clean + all)",
      "type": "shell",
      "command": "make clean all",
      "options": { "cwd": "${workspaceFolder}/Addition" },
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Run QEMU with gdb stub",
      "type": "shell",
      "command": "qemu-riscv32 -g 1234 ./Addition.x",
      "options": { "cwd": "${workspaceFolder}/Addition" },
      "isBackground": true,
      "problemMatcher": []
    }
  ]
}